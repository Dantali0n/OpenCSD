    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "attach",
            "name": "playground spdk attach",
            "executable": "${workspaceFolder}/build/playground/play-spdk",
            "target": "localhost:2222",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "autorun": [
                "set sysroot ${workspaceRoot}"
            ]
        }
    ]
}